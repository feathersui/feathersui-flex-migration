<?xml version="1.0" encoding="utf-8"?>
<project>
	
	<meta title="feathersui-flex-migration" package="feathers.rpc" version="1.0.0" company="Bowler Hat LLC"/>
	<app main="openfl.display.Sprite" path="bin" file="feathersui-flex-migration"/>
	
	<source path="src"/>
	<!-- <source path="externs"/> -->

	<haxeflag name="--swf-lib" value="/Users/joshtynjala/Development/flash/sdks/apache-flex-sdk-4.16.1_AIR51.2.2.4/frameworks/libs/framework.swc"/>
	
	<haxelib name="openfl"/>
	<haxelib name="feathersui"/>

	<haxeflag name="--macro" value="include('feathers.flex')"/>

	<template path="templates" if="flash"/>

	<section if="flash">
		<source path="build_macros/flash"/>
		<haxeflag name="--macro" value="AddFlashPropertyMeta.find('feathers.flex')"/>
		<!--
			don't remove dead code because other libraries that depend on
			this one, and need to build .swc files too, might need it
		 -->
		<haxeflag name="-dce" value="no"/>
	</section>

	<section if="find_missing_docs">
		<source path="build_macros/docs"/>
		<haxeflag name="--macro" value="FindMissingDocs.find('feathers.flex')"/>
	</section>
</project>